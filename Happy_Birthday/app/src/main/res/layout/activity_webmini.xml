<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ngoctrungpham2017.happy_birthday.Webmini">


    <LinearLayout
        android:layout_width="359dp"
        android:layout_height="497dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="7dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewback"
                android:layout_width="35dp"
                android:layout_height="34dp"
                android:background="@null"
                app:srcCompat="@drawable/back" />

            <ImageView
                android:id="@+id/imageViewnet"
                android:layout_width="39dp"
                android:layout_height="33dp"
                android:background="@null"
                app:srcCompat="@drawable/nett" />

            <ImageView
                android:id="@+id/imageViewreload"
                android:layout_width="39dp"
                android:layout_height="34dp"
                android:background="@null"
                app:srcCompat="@drawable/reload" />

            <EditText
                android:id="@+id/edittexturl"
                android:layout_width="242dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="URL"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/buttonduongdan"
                android:layout_width="157dp"
                android:layout_height="match_parent"
                android:layout_weight="25.67"
                android:background="@color/colorAccent"
                android:text="Đường dẫn" />

            <Button
                android:id="@+id/buttongo"
                android:layout_width="201dp"
                android:layout_height="40dp"
                android:background="@color/colorAccent"
                android:text="Go" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="471dp"
            android:orientation="horizontal">

            <WebView
                android:id="@+id/web"
                android:layout_width="match_parent"
                android:layout_height="475dp" />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
